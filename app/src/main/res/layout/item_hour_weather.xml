<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_hour_weather_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_home_background"
    android:orientation="vertical"
    android:paddingHorizontal="5dp">

    <TextView
        android:id="@+id/temperature_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:text="28ยบ" />

    <ImageView
        android:id="@+id/status_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_cloud"
        android:contentDescription="@string/cloud" />

    <TextView
        android:id="@+id/hourTemperature_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:text="15:00" />

</LinearLayout>